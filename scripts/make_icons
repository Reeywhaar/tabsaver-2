#!/bin/env node

const path = require('path')
const fs = require('fs')

const data = require(path.join(__dirname, '../src/components/Icon/data.json'))
const names = data.icons.map(c => c.properties.name)

const text =
  `
/* eslint-disable */
// AUTOGENERATED
export const mappings = {
  ${data.icons.map(c => `"${c.properties.name}": ${c.properties.code}`).join(',\n  ')}
}

export type IconName =\n${names.map(n => `"${n}"`).join(' |\n')}
`.trim() + '\n'

fs.writeFileSync(path.join(__dirname, '../src/components/Icon/icons.ts'), text)
